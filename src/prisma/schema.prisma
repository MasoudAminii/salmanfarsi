generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model admin {
  id       String  @id @default(cuid())
  username String
  password String
  email    String
  role     String?
}

model contact_us {
  id          String   @id @default(cuid())
  name        String
  email       String
  phone       String?
  subject     String?
  message     String
  submit_date DateTime @default(now())
}

model categories {
  category_id      Int     @id @default(autoincrement())
  category_name    String?
  category_name_en String?
  post             post[]

  @@map("categories")
}

model post {
  id           String     @id @default(cuid())
  slug         String     @unique
  publish_date DateTime
  title        String
  title_en     String
  main_image   String
  content1     String
  content1_en  String
  image1       String?
  image2       String?
  content2     String?
  content2_en  String?
  views        Int        @default(0)
  category_id  Int
  categories   categories @relation(fields: [category_id], references: [category_id], map: "Post_category_id_fkey")

  @@index([category_id], map: "category_id_index")
}

model staff {
  id           String  @id @default(cuid())
  name_fa      String
  name_en      String
  position_fa  String
  position_en  String
  education_fa String
  education_en String
  bio          String?
  photo_url    String?

  @@map("staff")
}

model reviews {
  id          String  @id @default(cuid())
  name_fa     String
  name_en     String
  position_fa String
  position_en String
  review_fa   String
  review_en   String
  image_url   String?

  @@map("reviews")
}
